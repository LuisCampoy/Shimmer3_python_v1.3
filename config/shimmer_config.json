{
  "shimmer": {
    "port": "/dev/rfcomm0",
    "device_address": "00:06:66:B1:4D:A1",
    "baud_rate": 115200,
    "timeout": 5,
    "sampling_rate": 51.2,
    "sensors": [
      "accelerometer",
      "gyroscope", 
      "magnetometer"
    ],
    "auto_pair": true,
    "max_pair_attempts": 3
  },
  "data": {
    "buffer_size": 1000,
    "file_rotation_size": 100000000,
    "output_directory": "data/raw"
  },
  "export": {
    "enabled": true,
    "interval_seconds": 60,
    "output_directory": "data/processed",
    "formats": ["csv", "hdf5"],
    "include_statistics": true,
    "min_records_threshold": 1000
  },
  "logging": {
    "level": "INFO",
    "file_enabled": true,
    "console_enabled": true,
    "log_directory": "logs"
  }
}