{
  "shimmer": {
    "port": "/dev/rfcomm0",
    "device_address": "00:06:66:B1:4D:A1",
    "manual_rfcomm": true,
    "passive_connect": true,
    "keep_open_on_handshake_failure": true,
    "verbose_serial": true,
    "baud_rate": 115200,
    "timeout": 5,
    "sampling_rate": 51.2,
    "sensors": [
      "accelerometer",
      "gyroscope", 
      "magnetometer"
    ]
  },
  "data": {
    "output_directory": "data/raw",
    "buffer_size": 1000
  },
  "export": {
    "output_directory": "data/processed",
    "enabled": true,
    "interval_seconds": 60,
    "formats": ["csv", "hdf5"],
    "include_statistics": true,
    "min_records_threshold": 1000
  },
  "logging": {
    "level": "INFO",
    "file_enabled": true,
    "console_enabled": true,
    "log_directory": "logs"
  }
}